<BorderPane prefHeight="608.0" prefWidth="498.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ap.ex2.bookscrabble.view.ControllerGameView">
         <top>
            <VBox alignment="CENTER" prefHeight="86.0" prefWidth="648.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="gameStatusLabel" alignment="TOP_LEFT" text="Nickname">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="109.0" prefWidth="500.0">
                     <children>
                        <Label fx:id="portNum" text="Port">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="countPlayers" text="Players in game">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#startGameButtonAction" text="Start Game">
                           <HBox.margin>
                              <Insets left="50.0" />
                           </HBox.margin>
                        </Button>
                         <Button fx:id="drawButtonTest" mnemonicParsing="false" onAction="#drawBoardTest" text="DRAW TEST">
                             <HBox.margin>
                                 <Insets left="50.0" />
                             </HBox.margin>
                         </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <VBox alignment="CENTER" style="-fx-background-color: pink;" BorderPane.alignment="CENTER">
               <children>
                    <Canvas fx:id="boardCanvas" height="337.0" onMouseClicked="#Clicked_on_board" width="520.0" />
                    <Separator prefHeight="36.0" prefWidth="500.0" />
            <Label alignment="CENTER" text="Your Tiles:" textAlignment="CENTER" textFill="#306fa1">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ScrollPane fx:id="tilesSP" fitToHeight="true" fitToWidth="true" prefHeight="67.0" prefWidth="563.0">
               <content>
                          <Canvas fx:id="TilesCanvas" height="65.0" width="500.0" />
               </content>
            </ScrollPane>
               </children>
            </VBox>
         </center>
         <right>
            <TableView id="scoreBoard" fx:id="scoreBoard" prefHeight="514.0" prefWidth="158.0" BorderPane.alignment="CENTER">
              <columns>
<!--                <TableColumn editable="false" prefWidth="100.0" text="Nickname" />-->
