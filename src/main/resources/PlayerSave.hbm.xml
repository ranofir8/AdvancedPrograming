<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="ap.ex2.bookscrabble.model.host.PlayerSave" table="PLAYERS">
        <id name="playerId" type="java.lang.Long" column="PLAYER_id" >
            <generator class="increment" />
        </id>
        <property name="playerName" type="java.lang.String" column="player_name" length="40" />
        <property name="playerScore" type="java.lang.Integer" column="player_score" length="-1" />
        <property name="playerTiles" type="java.lang.String" column="player_tiles" length="40" />
    </class>
</hibernate-mapping>
